<style>

</style>
</head>

<!-- Tabs -->


<section id="tabs">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 ">
				<nav>
					<div class="nav nav-tabs nav-fill" id="nav-tab" role="tablist">
						<a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">My Blogs</a>
						<a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Favorite Blogs</a>
					</div>
				</nav>
				<div class="tab-content py-3 px-3 px-sm-0" id="nav-tabContent">
					<div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
					
                    <div class="container">

                    <% Blog.where(user_id: current_user.id).each do |blog| %>       

                                    <div class="row">
                                        <div class="col-lg-6 mb-4">
                                            <div class="card h-100">
                                                <a href="#" style="height : 200px; width : 200px"> <%= image_tag blog.picture , class:"img-fluid rounded mb-3 mb-md-0" %> </a>
                                                <div class="card-body">
                                                    <h4 class="card-title">
                                                        <%= link_to blog.title, blog %>
                                                    </h4>
                                                    <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod
                                                        odio, gravida pellentesque urna varius vitae.</p>
                                                </div>
                                            </div>
                                        </div>
                                
                                     </div>
                                    <!-- /.row -->
                                    <% end %>
                                        
                                </div>
                    
					</div>
					<div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
					<% current_user.favorites.each do |blog| %>       
                             <% tempBlog = Blog.find(blog.blog_id) %>
						<div class="row">
							<div class="col-lg-6 mb-4">
								<div class="card h-100">
									<a href="#" style="height : 200px; width : 200px"> <%= image_tag tempBlog.picture , class:"img-fluid rounded mb-3 mb-md-0" %> </a>
									<div class="card-body">
										<h4 class="card-title">
											<%= link_to tempBlog.title, blog_path(tempBlog.id) %>
										</h4>
										<p class="card-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam viverra euismod
											odio, gravida pellentesque urna varius vitae.</p>
									</div>
								</div>
							</div>
					
						 </div>
						<!-- /.row -->
						<% end %>
							
					


					</div>
				</div>
			
			</div>
		</div>
	</div>
</section>
<!-- ./Tabs -->
